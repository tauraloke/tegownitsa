{
	"name": "tegownitsa",
	"productName": "Tegownitsa",
	"version": "0.0.0",
	"description": "Yet another image tag manager",
	"license": "MIT",
	"repository": "tauraloke/tegownitsa",
	"author": {
		"name": "Tauraloke",
		"email": "tauraloke@gmail.com",
		"url": "https://github.com/tauraloke"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --linux --windows",
		"dist:l": "electron-builder --linux",
		"dist:w": "electron-builder --windows",
		"release": "np"
	},
	"dependencies": {
		"electron-context-menu": "^3.0.0",
		"electron-debug": "^3.2.0",
		"electron-store": "^8.0.0",
		"electron-unhandled": "^3.0.2",
		"electron-updater": "^4.3.8",
		"electron-util": "^0.15.1",
		"sharp": "^0.30.7",
		"sharp-phash": "^2.0.0",
		"sqlite3": "^5.0.9",
		"tesseract.js": "^2.1.5"
	},
	"devDependencies": {
		"electron": "^12.0.6",
		"electron-builder": "^22.10.5",
		"np": "^7.5.0",
		"xo": "^0.39.1"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.electron.Tegownitsa",
		"asarUnpack": [
			"libs/sqlite/fuzzy.dll",
			"**/node_modules/sharp/**"
		],
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Images;Network;Tags"
		}
	}
}
