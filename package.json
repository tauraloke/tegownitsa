{
  "name": "tegownitsa",
  "productName": "Tegownitsa",
  "version": "0.9.0",
  "description": "Yet another image tag manager",
  "license": "MIT",
  "repository": "tauraloke/tegownitsa",
  "author": {
    "name": "Tauraloke",
    "email": "tauraloke@gmail.com",
    "url": "https://github.com/tauraloke"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "npx eslint .",
    "test": "npm run lint",
    "start": "electron .",
    "dev:clean": "rm -rf ./node_modules/electron/dist/storage/ && rm ./db.sqlite3",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --linux --windows",
    "dist:l": "electron-builder --linux",
    "dist:w": "electron-builder --windows",
    "release": "np"
  },
  "dependencies": {
    "electron-context-menu": "^3.5.0",
    "electron-debug": "^3.2.0",
    "electron-prompt": "^1.7.0",
    "electron-store": "^8.0.0",
    "electron-unhandled": "^4.0.1",
    "electron-updater": "^5.2.1",
    "electron-util": "^0.17.2",
    "exif-parser": "^0.1.12",
    "install": "^0.13.0",
    "iqdb-client": "^2.0.0",
    "npm": "^8.17.0",
    "sharp": "^0.30.7",
    "sharp-phash": "^2.0.0",
    "sqlite3": "^5.0.9",
    "tesseract.js": "^2.1.5"
  },
  "devDependencies": {
    "electron": "^20.0.3",
    "electron-builder": "^23.3.3",
    "eslint": "^8.22.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "np": "^7.5.0",
    "prettier": "2.7.1",
    "xo": "^0.51.0"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ]
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "build": {
    "appId": "com.electron.Tegownitsa",
    "asarUnpack": [
      "libs/sqlite/fuzzy.dll",
      "**/node_modules/sharp/**"
    ],
    "win": {
      "icon": "build/icon.png"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Images;Network;Tags"
    }
  }
}
